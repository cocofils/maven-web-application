node{
    def mavenHome = tool name: 'maven3.9.6' 
    stage('1.clonecode'){
    git "https://github.com/camtelnbn/msa.git"
    //sh "git clone https://github.com/LandmakTechnology/maven-web-application"
    //bat "git clone https://github.com/LandmakTechnology/maven-web-application" ... for jenkins inwindows
    }
    stage('2.mavenBuild'){
    sh "${mavenHome}/bin/mvn package"
    }
    stage('3.codeQualityAnalysis'){
    sh "${mavenHome}/bin/mvn sonar:sonar"
    }
    stage('4.uploadArtifacts'){
    sh "${mavenHome}/bin/mvn deploy"
    }
    stage('5.deploy2UAT'){
        deploy adapters: [tomcat9(credentialsId: 'tomcat-crudentials', path: '', url: 'http://3.17.143.178:8088/manager/html')], contextPath: null, war: 'target/*war'
    }
    stage('6.Manualapproval'){
            sh " echo 'Please review & approve' "
    timeout(time:300, unit: 'MINUTES')
    {
    input message: 'application ready for deployment, Please review and approve'
    }
    }
    stage('7.deploy2prod'){
         //use deploy to container plugin
    deploy adapters: [tomcat9(credentialsId: 'tomcat-crudentials', path: '', url: 'http://3.17.143.178:8088/manager/html')], contextPath: null, war: 'target/*war'
    }
        stage('8.apm'){
    sh " echo 'monitoring and observation & alerting' "
    sh " echo 'application performance Monitoring in progress' "
    }
    stage('9.notification'){
    sh "echo email notification to resolve any issue may arise"
    //use pipeline syntax & email notification pluginto achieve this
    emailext body: '''The build and deployment status of tesla webapp
''', recipientProviders: [developers(), buildUser()], subject: 'Job status', to: 'christian.meyeng@gmail.com'
    }
}
